# Azure Bot Framework Configuration (REQUIRED)
MicrosoftAppId=your-microsoft-app-id-here
MicrosoftAppPassword=your-microsoft-app-password-here
MicrosoftAppTenantId=your-tenant-id-here
BOT_ID=your-microsoft-app-id-here
BOT_PASSWORD=your-microsoft-app-password-here

# Azure AI Foundry Configuration (REQUIRED)
AZURE_AI_PROJECT_ENDPOINT=https://your-ai-project.cognitiveservices.azure.com/
PROJECT_CONNECTION_STRING=your-ai-project-connection-string
AGENT_ID=your-agent-id

# Azure Function App Configuration (REQUIRED)
AzureWebJobsStorage=your-azure-storage-connection-string
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~20

# Azure Subscription & Tenant
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# Teams App Configuration
M365_APP_ID=your-microsoft-app-id-here
M365_TENANT_ID=your-tenant-id
M365_CLIENT_ID=your-microsoft-app-id-here
M365_CLIENT_SECRET=your-microsoft-app-password-here
TEAMS_APP_ID=your-microsoft-app-id-here

# Optional Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
BOT_DOMAIN=localhost
BOT_ENDPOINT=http://localhost:7071
INITIATE_LOGIN_ENDPOINT=https://localhost:7071/api/auth/start

# These will be set during deployment
RESOURCE_GROUP=your-resource-group-name
BOT_NAME=your-bot-service-name