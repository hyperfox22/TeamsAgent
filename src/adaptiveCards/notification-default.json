{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "data:image/svg+xml;base64,",
                  "altText": "Security Alert",
                  "size": "Small",
                  "style": "Person"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${title}",
                  "weight": "Bolder",
                  "size": "Medium",
                  "wrap": true,
                  "color": "Attention"
                },
                {
                  "type": "TextBlock",
                  "text": "ü§ñ **${appName}** | Security Operations Center",
                  "isSubtle": true,
                  "size": "Small",
                  "wrap": true,
                  "spacing": "None"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "**AI Analysis:**",
          "weight": "Bolder",
          "size": "Small",
          "color": "Dark"
        },
        {
          "type": "Container",
          "style": "default",
          "items": [
            {
              "type": "TextBlock",
              "text": "${description}",
              "wrap": true,
              "spacing": "Small",
              "size": "Default"
            },
            {
              "type": "TextBlock",
              "text": "üîç *This analysis was generated by SOCBot's AI agent using current threat intelligence and security best practices.*",
              "wrap": true,
              "spacing": "Small",
              "size": "Small",
              "isSubtle": true,
              "color": "Good"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "style": "good",
      "spacing": "Medium",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "üïê **Generated:**",
              "value": "{{DATE({{NOW()}}, SHORT)}} at {{TIME({{NOW()}})}}"
            },
            {
              "title": "üîí **Source:**",
              "value": "SOCBot AI Security Assistant"
            },
            {
              "title": "üéØ **Priority:**",
              "value": "Review Recommended"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "üìñ Learn More",
      "url": "${notificationUrl}",
      "style": "positive"
    },
    {
      "type": "Action.OpenUrl",
      "title": "üõ°Ô∏è Security Center",
      "url": "https://security.microsoft.com",
      "style": "default"
    },
    {
      "type": "Action.ShowCard",
      "title": "üí¨ Quick Actions",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "TextBlock",
            "text": "Quick response options:",
            "weight": "Bolder"
          },
          {
            "type": "Input.ChoiceSet",
            "id": "response",
            "style": "compact",
            "choices": [
              {
                "title": "‚úÖ Acknowledged",
                "value": "acknowledged"
              },
              {
                "title": "üîç Need More Info",
                "value": "more_info"
              },
              {
                "title": "‚ö†Ô∏è Escalate",
                "value": "escalate"
              },
              {
                "title": "‚úã False Positive",
                "value": "false_positive"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Submit Response",
            "data": {
              "action": "quick_response"
            }
          }
        ]
      }
    }
  ]
}